<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".WriteReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/img_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_rounding"
            app:layout_constraintBottom_toBottomOf="@id/titleBar"
            app:layout_constraintRight_toRightOf="@+id/titleBar"
            app:layout_constraintTop_toTopOf="@+id/titleBar"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gmarketsansttfbold"
                android:text="TextView"
                android:textColor="#3DB7CC" />

            <TextView
                android:id="@+id/textView_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketsansttfmedium"
                android:text="작성시간"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_book"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="14dp">

                    <TextView
                        android:id="@+id/textView_book_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:letterSpacing="-0.05"
                        android:padding="0dp"
                        android:text="책제목입니다."
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#3D85B5"
                        android:textScaleX="0.95"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_writer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:text="지은이입니다"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textView_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:text="출판사입니다."
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_total"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/home1"
                    android:fontFamily="@font/gmarketsansttfbold"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="42"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/background_topbottombar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/home2" />

                <TextView
                    android:id="@+id/textView_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/gmarketsansttflight"
                    android:text="강추해요 52"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/home3" />

                <TextView
                    android:id="@+id/textView_neut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/gmarketsansttflight"
                    android:text="볼만해요 22"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/home4" />

                <TextView
                    android:id="@+id/textView_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/gmarketsansttflight"
                    android:text="비추해요 10"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editText_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start"
        android:hint="이책은 어떠셨나요?"
        android:inputType="textMultiLine|textPersonName"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_goal"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:gravity="center"
        android:padding="10dp"
        android:text="리뷰 쓰기"
        android:textColor="#FFFFFF" />
</LinearLayout>